        function renderPlaces(placesToRender = places) {
            const grid = document.getElementById('placesGrid');
            grid.innerHTML = '';

            placesToRender.forEach(place => {
                const card = document.createElement('div');
                card.className = 'place-card';
                card.onclick = () => openModal(place);
                
                card.innerHTML = `
                    <div class="rating">⭐ ${place.rating}</div>
                    <img src="${place.image}" alt="${place.title}" class="place-image">
                    <div class="place-info">
                        <h3 class="place-title">${place.title}</h3>
                        <p class="place-location">📍 ${place.location}</p>
                        <p class="place-description">${place.description}</p>
                        <div class="place-features">
                            ${place.features.map(feature => `<span class="feature-tag">${feature}</span>`).join('')}
                        </div>
                        <div class="place-actions">
                            <button class="btn btn-primary" onclick="event.stopPropagation(); openMap('${place.coordinates}', '${place.title}')">📍 Ver en Mapa</button>
                            <button class="btn btn-secondary" onclick="event.stopPropagation(); openModal(${JSON.stringify(place).replace(/"/g, '&quot;')})">ℹ️ Más Info</button>
                        </div>
                    </div>
                `;
                
                grid.appendChild(card);
            });
        }

        function openModal(place) {
            const modal = document.getElementById('placeModal');
            const modalImage = document.getElementById('modalImage');
            const modalBody = document.getElementById('modalBody');
            
            modalImage.src = place.image;
            modalImage.alt = place.title;
            
            modalBody.innerHTML = `
                <h2 class="modal-title">${place.title}</h2>
                <p class="modal-location">📍 ${place.location}</p>
                
                <div class="highlight">
                    <strong>💡 Consejo del Experto:</strong> ${place.tips}
                </div>
                
                <div class="weather-info">
                    <div class="info-title">🌤️ Información Climática</div>
                    <p><strong>Clima:</strong> ${place.weather}</p>
                    <p><strong>Mejor época para visitar:</strong> ${place.bestTime}</p>
                </div>
                
                <div class="info-section">
                    <div class="info-title">🎯 Actividades Principales</div>
                    <div class="place-features">
                        ${place.activities.map(activity => `<span class="feature-tag">${activity}</span>`).join('')}
                    </div>
                </div>
                
                <div class="info-section">
                    <div class="info-title">📋 Información Práctica</div>
                    <ul class="info-list">
                        <li><strong>Calificación:</strong> <span>⭐ ${place.rating}/5.0</span></li>
                        <li><strong>Presupuesto:</strong> <span>${place.cost}</span></li>
                        <li><strong>Ubicación:</strong> <span>${place.location}</span></li>
                        <li><strong>Mejor época:</strong> <span>${place.bestTime}</span></li>
                    </ul>
                </div>
                
                <div class="place-actions" style="margin-top: 30px;">
                    <button class="btn btn-primary" onclick="openMap('${place.coordinates}', '${place.title}')">🗺️ Abrir en Google Maps</button>
                    <button class="btn btn-secondary" onclick="sharePlace('${place.title}')">📤 Compartir Destino</button>
                </div>
            `;
            
            modal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            const modal = document.getElementById('placeModal');
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        function openMap(coordinates, placeName) {
            const [lat, lng] = coordinates.split(',');
            const url = `https://www.google.com/maps/search/?api=1&query=${lat},${lng}&query_place_id=${encodeURIComponent(placeName)}`;
            window.open(url, '_blank');
        }

        function sharePlace(placeName) {
            if (navigator.share) {
                navigator.share({
                    title: `Descubre ${placeName} en República Dominicana`,
                    text: `¡Mira este increíble destino en República Dominicana: ${placeName}!`,
                    url: window.location.href
                });
            } else {
                // Fallback para navegadores que no soportan Web Share API
                const text = `¡Descubre ${placeName} en República Dominicana! ${window.location.href}`;
                navigator.clipboard.writeText(text).then(() => {
                    alert('¡Enlace copiado al portapapeles!');
                });
            }
        }

        function searchPlaces() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const filteredPlaces = places.filter(place => 
                place.title.toLowerCase().includes(searchTerm) ||
                place.location.toLowerCase().includes(searchTerm) ||
                place.description.toLowerCase().includes(searchTerm) ||
                place.features.some(feature => feature.toLowerCase().includes(searchTerm))
            );
            
            renderPlaces(filteredPlaces);
            
            if (filteredPlaces.length === 0) {
                document.getElementById('placesGrid').innerHTML = `
                    <div style="grid-column: 1/-1; text-align: center; color: white; padding: 50px;">
                        <h3>No se encontraron destinos 😔</h3>
                        <p>Intenta con otros términos como "playa", "montaña", "aventura" o el nombre de una provincia.</p>
                        <button class="btn btn-primary" onclick="renderPlaces(); document.getElementById('searchInput').value = '';" style="margin-top: 20px;">
                            Ver todos los destinos
                        </button>
                    </div>
                `;
            }
        }

        // Event listeners
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchPlaces();
            }
        });

        // Cerrar modal al hacer clic fuera
        document.getElementById('placeModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // Cerrar modal con ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });

        // Inicializar la página
        renderPlaces();
    </script>
</body>
</html>
